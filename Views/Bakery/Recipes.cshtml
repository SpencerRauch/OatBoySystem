@model List<Recipe>
@{
    ViewData["Title"] = "Recipes";
}
<div class="text-center container">
    @if (Model.Count == 0)
    {
        <h2>No recipes yet, create one below ðŸ‘‡</h2>
    }
    else
    {
        <h1>Recipes</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Batches</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (Recipe r in Model)
                    {
                    <tr>
                        <td><a asp-action="RecipeView" asp-controller="Bakery" asp-route-rId="@r.RecipeId">@r.Name</a></td>
                        <td><a asp-action="RecipeAllBatch" asp-controller="Bakery" asp-route-rId="@r.RecipeId">@r.Batches.Count</a></td>
                    </tr>
                    }
            </tbody>
        </table>
    }
    @await Html.PartialAsync("_RecipeNew", new Recipe())
</div>